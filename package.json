  },
  "homepage": "https://github.com/BruceHem/koa-mods",
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/debug": "0.0.30",
    "@types/glob": "^5.0.32",
    "@types/kcors": "^2.2.1",
    "@types/koa": "^2.0.39",
    "@types/koa-bodyparser": "^3.0.25",
    "@types/koa-router": "^7.0.23",
    "@types/mocha": "^2.2.43",
    "@types/node": "^8.0.31",
    "@types/reflect-metadata": "0.0.5",
